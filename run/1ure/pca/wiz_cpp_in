parm ../../../top_files/dry_1ure.prmtop
trajin ../data/full_fit_1ure.nc
rms first :7-126@CA
average full_avg_1ure.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference full_avg_1ure.pdb [avg]
rms ref [avg] :7-126@CA RMSD
matrix mwcovar name mtx_1ure :7-126@CA
createcrd crd_1ure
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_1ure nmwiz nmwizvecs 3 nmwizfile nmwiz_modes_1ure.nmd nmwizmask :7-126@CA
go
